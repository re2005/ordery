// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model OrderIndex {
  id             String   @id            // gid://shopify/Order/...
  shop           String
  name           String
  createdAt      DateTime
  addressHash    String
  emailHash      String?
  status         String   // 'open' | 'replaced' | 'merged'
  mergedGroupId  String?
  updatedAt      DateTime @updatedAt

  @@index([shop, createdAt])
  @@index([shop, addressHash, createdAt])
}

model MergeGroup {
  id             String   @id @default(cuid())
  shop           String
  windowMinutes  Int
  originalIds    String[]  // order GIDs
  draftOrderId   String?
  newOrderId     String?
  reason         String    // 'address_hash' | 'email_hash' | 'both'
  status         String    // 'pending' | 'draft_created' | 'completed' | 'failed' | 'rejected'
  createdAt      DateTime  @default(now())

  @@index([shop, createdAt])
}

model ShopSettings {
  shop              String  @id
  windowMinutes     Int     @default(120)
  byAddress         Boolean @default(true)
  byEmail           Boolean @default(false)
  requireBoth       Boolean @default(false)
  autoCompleteDraft Boolean @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
